<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.Menu"
             Title="Menu"
             BackgroundColor="{DynamicResource PrimaryColor}">

    <Grid Padding="1" RowSpacing="3" ColumnSpacing="1"
          RowDefinitions="2*,*,*,*,*"
          ColumnDefinitions="*">



        <Button Text="Light" Grid.Row="1" Grid.Column="0"
              BorderWidth="3" WidthRequest="200" HeightRequest="50" Clicked="onlightclick"
                />
        <Button Text="Dark" Grid.Row="2" Grid.Column="0" TextColor="AntiqueWhite"
                BorderWidth="3" BackgroundColor="Black" WidthRequest="200" HeightRequest="50" Clicked="ondarkclick"/>
        <Button Text="Green" Grid.Row="3" Grid.Column="0" TextColor="Aqua"
                BorderWidth="3" BackgroundColor="Green" WidthRequest="200" HeightRequest="50" Clicked="ongreenclick"/>
        <Button Text="Pink" Grid.Row="4" Grid.Column="0" TextColor="Black"
               BorderWidth="3"    BackgroundColor="Pink" WidthRequest="200" HeightRequest="50" Clicked="onpinkclick"/>

    </Grid/>

</ContentPage>
